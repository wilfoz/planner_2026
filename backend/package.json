{
  "name": "lt-planner",
  "version": "1.0.0",
  "description": "LT - PLANNER API (NestJS + Fastify + Prisma/Postgres) with DDD/Clean Architecture",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "node scripts/setup-env.js",
    "env:setup": "node scripts/setup-env.js",
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "dotenv -e .env.development -- nest start --watch",
    "start:prod": "dotenv -e .env -- node dist/main.js",
    "lint": "eslint .",
    "test": "dotenv -e .env.test -- jest",
    "test:unit": "dotenv -e .env.test -- jest -c jest.unit.config.js",
    "test:int": "dotenv -e .env.test -- jest -c jest.int.config.js",
    "test:e2e": "dotenv -e .env.test -- jest -c jest.e2e.config.js",
    "prisma:generate": "prisma generate --schema src/shared/infrastructure/database/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema src/shared/infrastructure/database/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema src/shared/infrastructure/database/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema src/shared/infrastructure/database/prisma/schema.prisma",
    "swagger": "npm run start:dev"
  },
  "dependencies": {
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-fastify": "^11.0.0",
    "@nestjs/swagger": "^11.0.0",
    "@prisma/client": "^6.2.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
